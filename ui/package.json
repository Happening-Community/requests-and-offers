    "moment-timezone": "^0.5.45",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rimraf": "^5.0.7",
    "svelte": "^5.0.3",
